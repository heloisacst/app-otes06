        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Appotes06"
        tools:targetApi="31">
        <activity
            android:name=".ConsultasCreateActivity"
            android:exported="false" />
        <activity
            android:name=".ConsultasActivity"
            android:exported="false" />
        <activity
            android:name=".PacientesCreateActivity"
            android:exported="false" />
        <activity
            android:name=".PacientesActivity"
            android:exported="false" /> <!-- Referência ao arquivo de configuração de segurança -->
        <activity
            android:name=".MedicosCreateActivity"
            android:exported="false" />
        <activity
            android:name=".MedicosActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>